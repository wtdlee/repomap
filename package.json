{
  "name": "repomap",
  "version": "0.1.0",
  "description": "Interactive documentation generator for code repositories - visualize pages, components, GraphQL operations, and data flows",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./types": {
      "types": "./dist/types.d.ts",
      "import": "./dist/types.js"
    },
    "./analyzers": {
      "types": "./dist/analyzers/index.d.ts",
      "import": "./dist/analyzers/index.js"
    },
    "./generators": {
      "types": "./dist/generators/index.d.ts",
      "import": "./dist/generators/index.js"
    },
    "./server": {
      "types": "./dist/server/index.d.ts",
      "import": "./dist/server/index.js"
    }
  },
  "bin": {
    "repomap": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && npm run copy-assets",
    "copy-assets": "mkdir -p dist/generators/assets && cp src/generators/assets/*.css dist/generators/assets/",
    "dev": "tsx watch src/cli.ts",
    "dev:serve": "tsx watch --clear-screen=false src/cli.ts serve --no-cache",
    "prepublishOnly": "npm run build",
    "generate": "tsx src/cli.ts generate",
    "serve": "tsx src/cli.ts serve",
    "test": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky",
    "changeset": "changeset",
    "release": "changeset publish"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "documentation",
    "code-analysis",
    "graphql",
    "nextjs",
    "react",
    "rails",
    "ruby-on-rails",
    "data-flow",
    "visualization",
    "mermaid",
    "developer-tools",
    "static-analysis",
    "code-visualization",
    "api-documentation",
    "component-analysis"
  ],
  "author": "wtdlee <890511lkh@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wtdlee/repomap.git"
  },
  "bugs": {
    "url": "https://github.com/wtdlee/repomap/issues"
  },
  "homepage": "https://github.com/wtdlee/repomap#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^5.2.1",
    "fast-glob": "^3.3.2",
    "glob": "^13.0.0",
    "graphql": "^16.8.1",
    "marked": "^11.1.0",
    "open": "^11.0.0",
    "simple-git": "^3.21.0",
    "socket.io": "^4.7.2",
    "tree-sitter-wasms": "^0.1.13",
    "ts-morph": "^21.0.1",
    "web-tree-sitter": "^0.25.10",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "@eslint/js": "^9.39.1",
    "@types/babel__traverse": "^7.20.4",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^1.0.4"
  }
}
