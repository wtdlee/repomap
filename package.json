{
  "name": "repomap",
  "version": "0.1.0",
  "description": "Interactive documentation generator for code repositories - visualize pages, components, GraphQL operations, and data flows",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "repomap": "./dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "dev:serve": "tsx watch --clear-screen=false src/cli.ts serve --no-cache",
    "prepublishOnly": "npm run build",
    "generate": "tsx src/cli.ts generate",
    "serve": "tsx src/cli.ts serve",
    "test": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "documentation",
    "code-analysis",
    "graphql",
    "nextjs",
    "react",
    "data-flow",
    "visualization",
    "mermaid",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/user/repomap.git"
  },
  "bugs": {
    "url": "https://github.com/user/repomap/issues"
  },
  "homepage": "https://github.com/user/repomap#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@babel/parser": "^7.23.0",
    "@babel/traverse": "^7.23.0",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "express": "^4.18.2",
    "fast-glob": "^3.3.2",
    "graphql": "^16.8.1",
    "marked": "^11.1.0",
    "open": "^11.0.0",
    "simple-git": "^3.21.0",
    "socket.io": "^4.7.2",
    "ts-morph": "^21.0.1",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/babel__traverse": "^7.20.4",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^1.0.4"
  }
}
