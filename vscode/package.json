{
  "name": "repomap-vscode",
  "displayName": "Repomap",
  "description": "Run @wtdlee/repomap from VS Code and open generated docs.",
  "version": "0.1.0",
  "publisher": "wtdlee",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wtdlee/repomap.git"
  },
  "homepage": "https://github.com/wtdlee/repomap",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "activationEvents": [
    "onView:repomap.explorer",
    "onView:repomap.explorer.fallback",
    "onLanguage:typescript",
    "onLanguage:typescriptreact",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:ruby",
    "onCommand:repomap.open",
    "onCommand:repomap.refresh",
    "onCommand:repomap.serve",
    "onCommand:repomap.generate"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "repomap",
          "title": "Repomap",
          "icon": "resources/repomap.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "repomap.explorer.fallback",
          "name": "Repomap"
        }
      ],
      "repomap": [
        {
          "id": "repomap.explorer",
          "name": "Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "repomap.open",
        "title": "Repomap: Open"
      },
      {
        "command": "repomap.refresh",
        "title": "Repomap: Refresh"
      },
      {
        "command": "repomap.serve",
        "title": "Repomap: Serve"
      },
      {
        "command": "repomap.generate",
        "title": "Repomap: Generate (Static)"
      },
      {
        "command": "repomap.openFile",
        "title": "Repomap: Open File"
      }
    ],
    "configuration": {
      "title": "Repomap",
      "properties": {
        "repomap.npxSpecifier": {
          "type": "string",
          "default": "@wtdlee/repomap",
          "description": "NPX package specifier, e.g. '@wtdlee/repomap' or '@wtdlee/repomap@latest'"
        },
        "repomap.port": {
          "type": "number",
          "default": 3030,
          "description": "Port for 'repomap serve'"
        },
        "repomap.outputDir": {
          "type": "string",
          "default": ".repomap",
          "description": "Output directory for generated docs"
        },
        "repomap.jsonOutputDir": {
          "type": "string",
          "default": ".repomap",
          "description": "Directory where repomap writes report.json (used by the extension UI)"
        },
        "repomap.useTempOutput": {
          "type": "boolean",
          "default": true,
          "description": "Write analysis output to an extension-owned temp folder to avoid creating diffs in the repository"
        }
      }
    }
  },
  "scripts": {
    "build": "tsup",
    "watch": "tsup --watch",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/node": "^25.0.1",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^3.6.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.2"
  }
}
